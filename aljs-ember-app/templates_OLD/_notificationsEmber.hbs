<div class="site-example--content slds-scrollable--x slds-tabs__content slds-show" role="tabpanel">
    <div class="slds-p-horizontal--medium">
        <h4 class="site-text-heading--medium">Markup</h4>
{{#aljs-pre-container type="html"}}
&#123;&#123;#aljs-notification toast="true" theme="slds-theme--warning"&#125;&#125;
    <span class="slds-assistive-text">Info</span>
    <button class="slds-button slds-button--icon-inverse slds-notify__close">
        <svg aria-hidden="true" class="slds-button__icon">
            <use xlink:href="{{unbound assetsLocation}}/assets/icons/action-sprite/svg/symbols.svg#close"></use>
        </svg>
        <span class="slds-assistive-text">Close</span>
    </button>
    <div class="notify__content slds-grid">
        <svg aria-hidden="true" class="slds-icon slds-icon--small slds-m-right--small slds-col slds-no-flex">
            <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="{{unbound assetsLocation}}/assets/icons/utility-sprite/svg/symbols.svg#warning"></use>
        </svg>
        <div class="slds-col slds-align-middle">
            <h2 class="slds-text-heading--small">You've encountered some errors when trying to save edits to Samuel Smith.</h2>
        </div>
    </div>
&#123;&#123;/aljs-notification&#125;&#125;
{{/aljs-pre-container}}
        <h4 class="site-text-heading--medium">Attribute Bindings</h4>
	    <p class="slds-m-top--medium">This table details the available attribute bindings for this Ember component.</p>
	    <div class="slds-scrollable--x">
	        <table class="slds-table slds-table--bordered slds-max-medium-table--stacked slds-no-row-hover slds-m-top--medium">
	            <thead>
	                <tr class="site-text-heading--label">
	                    <th scope="col">Attribute name</th>
	                    <th scope="col">Purpose</th>
	                    <th scope="col">Values</th>
	                    <th scope="col">Default value</th>
	                </tr>
	            </thead>
	            <tbody>
	                <tr>
	                    <th scope="row"><code>toast</code></th>
	                    <td data-label="Purpose">This determines whether the notification will be a "toast" notification or not</td>
	                    <td data-label="Values"><code>"true", "false"</code></td>
	                    <td data-label="Default value" class="slds-cell-shrink"><code>"false"</code></td>
	                </tr>
	                <tr>
	                    <th scope="row"><code>theme</code></th>
	                    <td data-label="Purpose">The name of the theme class to apply to the notification</td>
	                    <td data-label="Values">Any of the classnames available in the <a href="http://www.lightningdesignsystem.com/components/utilities/themes">SLDS Theme collection</a></td>
	                    <td data-label="Default value" class="slds-cell-shrink"><code>null</code></td>
	                </tr>
	                <tr>
	                    <th scope="row"><code>dismissClass</code></th>
	                    <td data-label="Purpose">The name of a class that will close the notification when clicked</td>
	                    <td data-label="Values">A valid string</td>
	                    <td data-label="Default value" class="slds-cell-shrink"><code>null</code></td>
	                </tr>
	                <tr>
	                    <th scope="row"><code>visible</code></th>
	                    <td data-label="Purpose">To display or not display the notification</td>
	                    <td data-label="Values">A valid string</td>
	                    <td data-label="Default value" class="slds-cell-shrink"><code>false</code></td>
	                </tr>
	                <tr>
	                    <th scope="row"><code>duration</code></th>
                        <td data-label="Purpose">The duration in which the notification will remain on screen in miliseconds; if the value is set to <code>0</code>, the notification will remain indefinitely</td>
	                    <td data-label="Values">A valid string</td>
	                    <td data-label="Default value" class="slds-cell-shrink"><code>0</code></td>
	                </tr>
	                <tr>
	                    <th scope="row"><code>fadeDuration</code></th>
	                    <td data-label="Purpose">The duration in which the notification will fade in and out in miliseconds; if the value is set to <code>0</code>, the notification will appear/disappear without animations</td>
	                    <td data-label="Values">A valid string</td>
	                    <td data-label="Default value" class="slds-cell-shrink"><code>0</code></td>
	                </tr>
	            </tbody>
	        </table>
	    </div>
    </div>
</div>